{{#if details}}
  <a href="{{block.userOptions.url}}">
    View in LogScale
    {{fa-icon "external-link" fixedWidth=true class="external-icon"}}
  </a>
  {{#each details.results as |item index|}}
    <div class="result">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a
            {{action "changeTab" index "showFields"}}
            class="nav-link {{if (eq activeTab index 'showFields') 'active'}}"
          >Fields</a>
        </li>
        <li class="nav-item">
          <a
            {{action "changeTab" index "showTable"}}
            class="nav-link {{if (eq activeTab index 'showTable') 'active'}}"
          >Table</a>
        </li>
        <li class="nav-item">
          <a
            {{action "changeTab" index "showJson"}}
            class="nav-link {{if (eq activeTab index 'showJson') 'active'}}"
          >JSON</a>
        </li>
      </ul>
      {{#if (eq (get activeTab index) "showFields")}}
        <div class="tab-container">
          {{#each-in item as |key value|}}
            <div>
              <span class="p-key">{{key}}:</span>
              <span class="p-value">{{value}}</span>
            </div>
          {{/each-in}}
        </div>
      {{/if}}
      {{#if (eq (get activeTab index) "showTable")}}
        <div class="tab-container fields-table">
          {{object-to-table item "json"}}
        </div>
      {{/if}}
      {{#if (eq (get activeTab index) "showJson")}}
        <div class="tab-container json-block">
          <pre>{{{get readableJson index}}}</pre>
        </div>
      {{/if}}
    </div>
  {{/each}}
{{/if}}